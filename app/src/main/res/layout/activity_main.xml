<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.cardview.widget.CardView
        android:id="@+id/select_card_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/teal" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="370sp"
            android:layout_height="370sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/imagemain" />

        <TextView
            android:id="@+id/classified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/teal_500"
            android:layout_marginTop="420dp"
            android:text="Classified as:"
            android:layout_marginLeft="140dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="455dp"
            android:text=""
            android:textColor="@color/teal_900"
            android:textSize="27sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="515dp"
            android:backgroundTint="@color/teal_900"
            android:drawableLeft="@drawable/camera1"
            android:text="Launch Camera"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="620dp"
            android:backgroundTint="@color/teal_900"
            android:drawableLeft="@drawable/gallery1"
            android:text="Launch Gallery"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />








    </androidx.cardview.widget.CardView>




</androidx.drawerlayout.widget.DrawerLayout>