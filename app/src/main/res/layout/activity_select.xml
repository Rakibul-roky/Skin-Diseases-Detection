<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:background="#FFFFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/select_card_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/teal" />

        <androidx.cardview.widget.CardView
            android:id="@+id/home_card_view"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/skindisease" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="345dp"
                android:background="@color/teal_500"
                android:text="                 Skin Disease Detection"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/select_button1"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@color/teal_900"
            android:drawableLeft="@drawable/predict2"
            android:textAllCaps="false"
            android:text="Start Predict"
            android:textSize="15sp"
            app:cornerRadius="20dp"

            />

        <Button
            android:id="@+id/select_button2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="520dp"
            android:backgroundTint="@color/teal_900"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/aboutdis"
            android:text="about Disease"
            android:textSize="15sp"
            app:cornerRadius="20dp"

            />

        <Button
            android:id="@+id/select_button3"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="620dp"
            android:backgroundTint="@color/teal_900"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/doc2"
            android:text="Consult a Doctor"
            android:textSize="14sp"
            app:cornerRadius="20dp"

            />




    </androidx.cardview.widget.CardView>




</RelativeLayout>